<form class="form-horizontal" method="{{ form.vars.method }}" action="{{ form.vars.action }}">
    {{ form_start(form) }}
    <div class="form-group">
        <label class="col-sm-2 control-label">{{ form_label(form.title) }}</label>
        <div class="col-sm-10">
            {{ form_widget(form.title, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.title) }}
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label">{{ form_label(form.description) }}</label>
        <div class="col-sm-10">
            {{ form_widget(form.description, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.description) }}
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label">{{ form_label(form.prix) }}</label>
        <div class="col-sm-10">
            {{ form_widget(form.prix, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.prix) }}
        </div>
        </div>
    <div class="form-group">
        <label class="col-sm-2 control-label">{{ form_label(form.image) }}</label>
        <div class="col-sm-10">
            {{ form_widget(form.image, {'attr': {'class': 'form-control-file'}}) }}
            {{ form_errors(form.image) }}
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-primary">{{ button_label|default('Save') }}</button>
        </div>
    </div>
    {{ form_end(form) }}
</form>



